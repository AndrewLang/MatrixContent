
<div class="section-gray">
    <div *ngFor="#post of Posts">
        <div class="row">
            <div class="col-md-12">
                <div class="card post-card">
                    <div *ngIf="post.HasSplash">
                        <img class="card-img-top" src="{{post.SplashUrl}}" alt="...">
                    </div>

                    <div class="card-block">
                        <a target="_self" href="/thread/{{post.Slug}}"> <h4 class="card-title">{{post.Title}}</h4></a>
                        <p class="card-text">{{post.Content}}</p>

                        <div>
                            <span><i class="fa fa-calendar"></i> {{post.DateCreated }} |</span>
                            <span title="Read"><i class="fa fa-book"></i> ({{post.ReadCount}}) |</span>
                            <span><i class="fa fa-comments" title="Comments"></i> ({{post.Comments.length}}) |</span>
                            <span><i class="fa fa-heart" title="Rating"></i> ({{post.Rating}}) |</span>
                            @*<span ng-show="post.Categories.length" ><i class="fa fa-folder"></i> <span ng-repeat="category in post.Categories"><i class="fa fa-circle"></i> {{category.Name}} </span> | </span>
                                <span ng-show="post.Tags.length" ><i class="fa fa-tags"></i> <span ng-repeat="tag in post.Tags"><i class="fa fa-circle"></i> {{tag.Name}} </span></span>*@
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>


</div>