
<div>
    <paged-posts>

        <router-outlet></router-outlet>

        <!--ng-if is important here, it make the pager load after initialization-->

        <section class="text-center" *ngIf="DataContext.Data">
            <pagination [totalItems]="DataContext.Data.TotalItemCount"
                        [maxSize]="DataContext.MaxSize"
                        [boundaryLinks]="DataContext.ShowBoundaryLinks"
                        previous-text="&lsaquo;"
                        next-text="&rsaquo;"
                        first-text="&laquo;"
                        last-text="&raquo;"
                        (pageChanged)="onPageChanged($event)"
                        [(ngModel)]="DataContext.CurrentPage"
                        class="pagination-sm">

            </pagination>
        </section>
    </paged-posts>
</div>