


<blog>
    @await Html.PartialAsync("_LoadingView")
</blog>

@section styles{
    <link rel="stylesheet" href="~/css/blog.css" />
}

@section scripts{
    <script>
        System.config({
            transpiler: 'typescript',
            typescriptOptions: { emitDecoratorMetadata: true },
            packages: {
                "/blogapp": { defaultExtension: 'ts' },
                "../../lib/ng2-bootstrap": {
                    defaultExtension: "ts"
                }
            },
            paths: {
                "ng2-bootstrap/ng2-bootstrap": "../../lib/ng2-bootstrap/ng2-bootstrap"
            }
        });
        System.import('/blogapp/blog')
              .then(null, console.error.bind(console));
    </script>
}